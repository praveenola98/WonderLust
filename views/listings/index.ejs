<% layout("layouts/boilerplate")%>

  <style>
    #filters {
      display: flex;
      flex-wrap: wrap;
      align-items: center;
    }


    /* Filter item */
    .filter {
      text-align: center;
      margin-right: 1.5rem;
      margin-top: 1rem;
      opacity: 0.7;
      min-width: 70px;
    }

    .filter:hover {
      opacity: 1;
      cursor: pointer;
    }

    .filter p {
      font-size: 0.8rem;
    }

    .tax-info {
      display: none;
    }

    .tax-toggle {
      border: 2px solid black;
      border-radius: 7px;
      padding-right: 4px;
      padding-left: 4px;
    }


    .filter-link {
  text-decoration: none;
  
}

    @media (max-width: 2058px) {
      #filters {
        flex-wrap: nowrap;
        /* ‚ùå wrap band */
        overflow-x: auto;
        /* üëâ horizontal scroll */
        overflow-y: hidden;
        white-space: nowrap;
        -webkit-overflow-scrolling: touch;
        padding-bottom: 1rem;
      }

      #filters::-webkit-scrollbar {
        display: none;
        /* scrollbar hide */
      }

      .filter {
        flex: 0 0 auto;
        /* ek row me hi rahe */
        margin-right: 1.5rem;
        margin-top: 1rem;
      }

      .tax-toggle {
        flex: 0 0 auto;
        margin-left: 1rem;
      }
    }
  </style>

