  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
    <%for(listing of alllistings) {%>
      <a class="listing-link" href="/listings/<%=listing._id%>">
        <div class="card col listing-card">
          <img class="card-img-top" src="<%=listing.image.url%> " style="height: 20rem;">
          <div class="card-img-overlay"></div>
          <div class="card-body">
            <p class="card-text">
              <b>
                <%=listing.title%>
              </b><br />
              <b>Price:</b>
              ‚Çπ<%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %>/Night
                <i class="tax-info"> &nbsp;&nbsp;+18% GST</i>
            </p>
            </p>

          </div>
        </div>
      </a>
      <% }%>
  </div>
  <script>
    let taxSwitch = document.getElementById("switchCheckDefault");
    taxSwitch.addEventListener("click", () => {

      let taxinfo = document.getElementsByClassName("tax-info")

      for (taxinfo of taxinfo) {
        if (taxinfo.style.display != "inline") {
          taxinfo.style.display = "inline"
        } else {
          taxinfo.style.display = "none"
        }

      }



    })
  </script>



